<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Spinner
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/wordNumSpinner"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/outputTextView"
        android:layout_toEndOf="@+id/outputTextView"
        android:id="@+id/passwordOutputTextView" />

    <Button
        android:text="Generete Password"
        android:layout_width="wrap_content"
        android:id="@+id/genPassBtn"
        android:layout_height="45dp"
        android:layout_below="@+id/wordNumSpinner"
        android:layout_toStartOf="@+id/wordNumSpinner" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outputTextView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="211dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:id="@+id/textView"
        android:text="@string/instNumOfWords"
        android:layout_marginBottom="86dp"
        android:layout_above="@+id/passwordOutputTextView"
        android:layout_alignParentStart="true" />
</RelativeLayout>